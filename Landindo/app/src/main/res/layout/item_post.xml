<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_post"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="0.7dp"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/iv_gambarPost"
            android:layout_width="244dp"
            android:layout_height="132dp"
            android:src="@drawable/jam_gadang"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:text="Jam Gadang"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/iv_gambarPost"
            app:layout_constraintStart_toStartOf="@id/iv_gambarPost"
            app:layout_constraintEnd_toEndOf="@id/iv_gambarPost"
            android:layout_marginTop="-50dp"
            android:textColor="@color/white"/>


<!--        <View-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="1dp"-->
<!--            android:background="@color/grey"-->
<!--            app:layout_constraintTop_toBottomOf="@id/iv_gambarPost"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>